{
  "manifest_version": 3,
  "name": "Gatos Flutuantes",
  "version": "2.0",
  "description": "Escolha um gatito para tu",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icons/gatoapontando.png",
      "48": "images/icons/gatoapontando.png",
      "128": "images/icons/gatoapontando.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.png",
        // "images/gato1.png",
        // "images/gato2.png",
        // "images/gato3.png",

        // imagem padrao
        "images/img-padrao/gato-preto-sentado.png",
        "images/img-padrao/gato-branco-sentado.png",
        "images/img-padrao/gato-siames-sentado.png",
        "images/img-padrao/gato-brancopreto-sentado.png",
        "images/img-padrao/gato-branco-mancha-laranja-preto-sentado.png",
        "images/img-padrao/gato-laranja-sentado.png",
        "images/img-padrao/branco-malhado-cinza.png",

        // animacao sentado
        "images/gatos/animation-1/preto.png",
        "images/gatos/animation-1/branco.png",
        "images/gatos/animation-1/siames.png",
        "images/gatos/animation-1/branco-manchas-pretas.png",
        "images/gatos/animation-1/gato-branco-mancha-laranja-preto.png",
        "images/gatos/animation-1/gato-laranja-sentado.png",
        "images/gatos/animation-1/branco-malhado-cinza.png",

        // amimacao carregado
        "images/gatos/animation-2/gato-preto-carregado.png",
        "images/gatos/animation-2/gato-branco-carregado.png",
        "images/gatos/animation-2/gato-siames-carregado.png",
        "images/gatos/animation-2/gato-branco-preto-carregado.png",
        "images/gatos/animation-2/gato-branco-mancha-laranja-preto-carregado.png",
        "images/gatos/animation-2/gato-laranja-carregado.png",
        "images/gatos/animation-2/gato-branco-malhado-carregado.png",
        


        
        "audio/*.mp3",
        "audio/miado.mp3",
        "audio/gato-rindo.mp3",
        "audio/death-bong.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/icons/gatoapontando.png",
    "48": "images/icons/gatoapontando.png",
    "128": "images/icons/gatoapontando.png"
  }
}