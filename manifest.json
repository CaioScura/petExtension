{
  "manifest_version": 3,
  "name": "Cat Companion",
  "version": "1.0",
  "description": "Escolha seu gato e tenha um companheiro no navegador!",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icons/gatoapontando.png",
      "48": "images/icons/gatoapontando.png",
      "128": "images/icons/gatoapontando.png"
    }
  },
  "icons": {
    "16": "images/icons/gatoapontando.png",
    "48": "images/icons/gatoapontando.png",
    "128": "images/icons/gatoapontando.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
